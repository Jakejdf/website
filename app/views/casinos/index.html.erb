<% content_for :pre_container do -%>
<%= render 'static_pages/parallax_header', text: 'Casinos', img_url: 'bg-roulette.jpg' -%>
<% end -%>

<div class="row">
	<div class="col-sm-6">
		<div class="well well-sm">
			<div id="casinosMap" class="gmap"></div>
		</div>
	</div>
	<% @casinos.has_image.first(2).each do |casino| -%>
	<div class="col-sm-3">
		<div class="well well-sm">
			<%= link_to image_tag(casino.pictures.first.image_url, class: 'img-thumbnail'), casino -%>
			<div class="caption">
				<h4>
					<%= casino.name -%>
				</h4>
			</div>
		</div>
	</div>
	<% end -%>
</div>

<div class="table-responsive">
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Name</th>
				<th>Address</th>
				<th>Destination</th>
			</tr>
		</thead>

		<tbody>
			<% @casinos.each do |casino| %>

			<%= content_tag :tr, class: 'casino', data: {casino: casino.to_json} do -%>
			<td>
				<%= link_to_if casino.destination.present?, casino.name, [casino.destination, casino] do %>
				<%= link_to casino.name, casino -%>
				<% end -%>
			</td>
			<td><%= casino.address %></td>
			<td><%= link_to_if casino.destination.present?, casino.destination.try(:name), casino.destination %></td>
			<% end %>

			<% end %>
		</tbody>
	</table>
</div>

<% if is_admin? -%>
<hr>
<%= link_to 'New Casino', new_admin_casino_path %>
<% end -%>
