<% testimonials = Testimonial.approved.sample(3) -%>

<div id="testimonialCarousel" class="carousel slide" data-ride="carousel">

	<!-- Wrapper for slides -->
	<div class="carousel-inner" role="listbox">

		<% testimonials.each do |testimonial| -%>
		<div class="item <%= testimonial == testimonials.first ? 'active' : nil -%>">
			<%= render 'testimonials/excerpt', testimonial: testimonial -%>
		</div>
		<% end.empty? and begin %>
		<p class="lead text-muted text-center">
			Testimonials Coming Soon.
		</p>
		<% end %>

	</div>

	<% if testimonials.count > 1 -%>
	<!-- Controls -->
	<div class="text-center">
		<a class="" href="#testimonialCarousel" role="button" data-slide="prev">
			<%= fa_icon('chevron-left') -%>
			<span class="sr-only">Previous</span>
		</a>
		<a class="" href="#testimonialCarousel" role="button" data-slide="next">
			<%= fa_icon('chevron-right') -%>
			<span class="sr-only">Next</span>
		</a>
	</div>
	<% end -%>

</div>