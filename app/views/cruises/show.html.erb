<p id="notice"><%= notice %></p>

<p>
	<strong>Title:</strong>
	<%= @cruise.title %>
</p>

<p>
	<strong>Slug:</strong>
	<%= @cruise.slug %>
</p>

<p>
	<strong>Content:</strong>
	<%= @cruise.content %>
</p>

<p>
	<strong>Start at:</strong>
	<%= @cruise.start_at %>
</p>

<p>
	<strong>End at:</strong>
	<%= @cruise.end_at %>
</p>

<p>
	<strong>Venue:</strong>
	<%#= @cruise.venue %>
</p>

<h3>Ports of Call</h3>
<table class="table table-striped table-condensed">
	<thead>
		<tr>
			<th>Port</th>
			<th>Arrives</th>
			<th>Departs</th>
		</tr>
	</thead>
	<tbody>
		<% @cruise.port_of_calls.each do |poc| -%>
		<tr>
			<td><%= poc.port_id -%></td>
			<td><%= poc.arrives_at -%></td>
			<td><%= poc.departs_at -%></td>
		</tr>
		<% end -%>
	</tbody>
</table>

<%= link_to 'Edit', edit_admin_cruise_path(@cruise) %>
