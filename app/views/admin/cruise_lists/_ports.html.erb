<div class="panel panel-default">
	<div class="panel-heading">
		<h3 class="panel-title">Ports of Call</h3>
	</div>
	<div class="embed-responsive embed-responsive-map">
		<%= content_tag :iframe, nil, src: maps_cruise_list_path(@cruise_list), class: 'embed-responsive-item' %>
	</div>

	<div class="table-responsive">
		<table class="table table-striped table-condensed">
			<thead>
				<tr>
					<th>Port</th>
					<th>Arrival</th>
					<th>Departure</th>
				</tr>
			</thead>
			<tbody>
				<% @cruise_list.cruise_list_ports.each_with_index do |poc, index| -%>

				<%= content_tag :tr, class: 'port-of-call', data: {port: poc.port.to_json, index: index} do -%>
				<td>
					<%= link_to poc.port.name, poc.port, data: {toggle: :modal, target: '#defaultModal'} -%>
				</td>
				<td><%= poc.arrival -%></td>
				<td><%= poc.departure -%></td>
				<% end -%>

				<% end -%>
			</tbody>
		</table>
	</div>
</div>
