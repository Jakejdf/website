<%= link_to "New #{@type.titleize}", sti_event_path(@type, nil, :new), class: 'btn btn-primary' %>
<hr>

<div class="table-responsive">
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Title</th>
				<th>Venue</th>
				<th>Dates</th>
			</tr>
		</thead>
		<tbody>
			<% @events.each do |event| %>
			<tr>
				<td><%= link_to event.title, sti_event_path(event.type, event, :edit) -%></td>
				<td><%#= event.venue -%></td>
				<td><%= event.date_span -%></td>
			</tr>
			<% end -%>
		</tbody>
	</table>
</div>

<div class="pagination-container text-center">
	<%#= paginate @events %>
</div>