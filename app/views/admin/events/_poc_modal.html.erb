<div class="form-group">

	<!-- Button trigger modal -->
	<button type="button" class="btn btn-info" data-toggle="modal" data-target="#portOfCallsModal">
		Port of Calls
	</button>

	<!-- Modal -->
	<div class="modal fade" id="portOfCallsModal" tabindex="-1" role="dialog" aria-labelledby="portOfCallsModalLabel">
		<div class="modal-dialog modal-lg">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
					<h4 class="modal-title" id="portOfCallsModalLabel">Modal title</h4>
				</div>
				<div class="modal-body">
					<h3>Ports of Call</h3>

					<div class="table-resposive">
						<table class="table table-striped table-condensed" id="port_of_calls">
							<thead>
								<tr>
									<th>Port</th>
									<th>Arrives</th>
									<th>Departs</th>
									<th></th>
								</tr>
							</thead>
							<tbody>
								<%= f.fields_for :port_of_calls do |pocs| %>
								<%= render 'port_of_call_fields', f: pocs -%>
								<% end -%>
							</tbody>
						</table>
					</div>

					<%= link_to_add_association 'Add Port of Call', f, :port_of_calls, 'data-association-insertion-node' => '#port_of_calls tbody', 'data-association-insertion-method' => 'append', class: 'btn btn-info btn-xs' %>

				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
					<%= f.submit nil, class: 'btn btn-success' %>
				</div>
			</div>
		</div>
	</div>
</div>