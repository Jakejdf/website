<%= form_for [:admin, @event] do |f| %>
<% if @event.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

	<ul>
		<% @event.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
</div>
<% end %>

<%#= render 'admin/admin/images/pictures_upload', f: f -%>

<div class="form-group">
	<%= f.label :title %>
	<%= f.text_field :title, class: 'form-control' %>
</div>

<div class="form-group">
	<%= f.label :venue_id %>
	<div class="input-group">
		<%= render 'admin/venues/select' -%>
		<span class="input-group-btn">
			<%= link_to 'Add Venue', new_admin_venue_path(modal: true, type: @type), class: 'btn btn-info', data: {toggle: :modal, target: '#defaultModal'} -%>
		</span>
	</div>
</div>

<div class="btn-group btn-group-justified form-group" role="group">
	<%= link_to 'Port of Calls', '#', class: 'btn btn-info', data: {toggle: :modal, target: '#portOfCallsModal'} if @event.type == 'Cruise' -%>
	<%#= link_to 'Pictures', nil, class: 'btn btn-info' -%>
</div>
<%= render 'poc_modal', f: f if @event.type == 'Cruise' -%>

<div class="form-group">
	<%= f.label :content %>
	<%= f.text_area :content, class: 'froala_content' %>
</div>

<% unless @event.type == 'Cruise' -%>
<div class="form-group">
	<%= f.label :start_at %>
	<%= f.datetime_select :start_at %>
</div>
<div class="form-group">
	<%= f.label :end_at %>
	<%= f.datetime_select :end_at %>
</div>
<% end -%>

<div class="row">
	<%= f.fields_for :pictures do |pics| -%>
	<%= render 'admin/pictures/nested_fields', obj: f.object, f: pics -%>
	<% end -%>
</div>

<div class="actions">
	<%= f.submit nil, class: 'btn btn-primary btn-lg' %>
</div>
<% end %>
