<%= form_for [:admin, @event], html: {multipart: true} do |f| %>
<% if @event.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

	<ul>
		<% @event.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
</div>
<% end %>

<div class="form-group">
	<%= f.label :title %>
	<%= f.text_field :title, class: 'form-control' %>
</div>

<div class="form-group">
	<%= f.label :venue_id %>
	<div class="input-group">
		<%= f.collection_select :venue_id, Venue.all, :id, :name, {include_blank: 'Select Venue'}, class: 'form-control', id: 'select_venue' -%>
		<span class="input-group-btn">
			<%= link_to 'Add Venue', new_admin_venue_path, class: 'btn btn-warning', data: { confirm: 'You are leaving this page. Unsaved changes will be lost.' } -%>
		</span>
	</div>
</div>

<div class="form-group">
	<%= f.label :content %>
	<%= f.text_area :content, class: 'froala_content form-control' %>
</div>

<% unless @event.type == 'Cruise' -%>
<div class="form-group">
	<%= f.label :start_at %>
	<%= f.datetime_select :start_at %>
</div>
<div class="form-group">
	<%= f.label :end_at %>
	<%= f.datetime_select :end_at %>
</div>
<% end -%>

<%= render 'admin/admin/nested_accordion', f: f, includes: @nested_includes -%>

<div class="actions">
	<%= f.submit nil, class: 'btn btn-primary btn-lg' %>
</div>
<% end %>
