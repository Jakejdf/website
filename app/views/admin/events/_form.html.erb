<%= form_for [:admin, @event], html: {multipart: true} do |f| %>
<% if @event.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

	<ul>
		<% @event.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
</div>
<% end %>

<div class="form-group">
	<%= f.label :title %>
	<%= f.text_field :title, class: 'form-control' %>
</div>

<div class="form-group">
	<%= f.label :venue_id %>
	<div class="input-group">
		<%= f.collection_select :venue_id, Venue.all, :id, :name, {include_blank: 'Select Venue'}, class: 'form-control', id: 'select_venue' -%>
		<span class="input-group-btn">
			<%= link_to 'Add Venue', new_admin_venue_path, class: 'btn btn-warning', data: { confirm: 'You are leaving this page. Unsaved changes will be lost.' } -%>
		</span>
	</div>
</div>

<div class="form-group">
	<%= f.label :content %>
	<%= f.text_area :content, class: 'froala_content form-control' %>
</div>

<% unless @event.type == 'Cruise' -%>
<% usec = Time.now.usec -%>
<div class="row">
	<div class="col-sm-6">
		<div class="form-group">
			<%= render 'admin/admin/datepicker', f: f, field: :start_string, label: 'Event Start Time', dtp_class: 'start', usec: usec -%>
		</div>
	</div>
	<div class="col-sm-6">
		<div class="form-group">
			<%= render 'admin/admin/datepicker', f: f, field: :end_string, label: 'Event End Time', dtp_class: 'end', usec: usec -%>
		</div>
	</div>
</div>
<% end -%>

<%= render 'admin/admin/nested_accordion', f: f, includes: @nested_includes -%>

<div class="actions">
	<%= f.submit nil, class: 'btn btn-primary btn-lg' %>
</div>
<% end %>
