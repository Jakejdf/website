<div class="table-responsive">
	<table class="table table-striped">
		<thead>
			<tr>
				<th></th>
				<th>Title</th>
				<th>Imageable</th>
				<th colspan="3"></th>
			</tr>
		</thead>

		<tbody>
			<% @pictures.each do |picture| %>
			<tr>
				<td><%= image_tag picture.gh_url, width: 50 %></td>
				<td><%= picture.title %></td>
				<td><%= picture.imageable %></td>
				<td><%= link_to 'Show', '#picture' %></td>
				<td><%= link_to 'Edit', edit_admin_picture_path(picture) %></td>
				<td><%= link_to 'Destroy', [:admin, picture], method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>