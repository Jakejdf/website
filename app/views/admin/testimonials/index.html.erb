
<%= link_to "New Testimonial", new_admin_testimonial_path, class: 'btn btn-primary' -%>

<hr>

<div class="table-responsive">
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Name</th>
				<th>Subject</th>
				<th class="text-center">Approval</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @testimonials.each do |testimonial| %>
			<tr>
				<td>
					<%= link_to testimonial.name, edit_admin_testimonial_path(testimonial) -%>
				</td>
				<td>
					<%= testimonial.subject -%>
				</td>
				<td class="text-center">
					<%= testimonial.approved ? fa_icon('check-square-o') : link_to('Review', edit_admin_testimonial_path(testimonial), class: 'btn btn-xs btn-warning') -%>
				</td>
				<td class="text-right">
					<%= link_to fa_icon('eye'), testimonial, class: 'btn btn-info btn-xs' -%>
					<%= link_to fa_icon('remove'), [:admin, testimonial], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' -%>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>

<div class="pagination-container text-center">
	<%= paginate @testimonials %>
</div>