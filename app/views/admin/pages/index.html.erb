<%= link_to 'New Page', new_admin_page_path, class: 'btn btn-primary' %>
<hr>

<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Slug</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= link_to fa_icon('pencil')+page.title, edit_admin_page_path(page) %></td>
        <td><%= page.slug %></td>
        <td><%= page.status %></td>
        <td><%= link_to 'View Page', short_page_path(page) %></td>
        <td><%= link_to fa_icon('remove'), [:admin, page], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
