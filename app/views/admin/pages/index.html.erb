<%= link_to 'New Page', new_admin_page_path, class: 'btn btn-primary' %>
<hr>

<div class="table-responsive">
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Title</th>
				<th>Status</th>
				<th>Last Updated</th>
				<th></th>
			</tr>
		</thead>

		<tbody>
			<% @pages.each do |page| %>
			<tr>
				<td><%= link_to fa_icon('pencil', text: page.title), edit_admin_page_path(page) %></td>
				<td><%= page.status %></td>
				<td><%= page.updated_at %></td>
				<td>
				<%= link_to fa_icon('eye'), short_page_path(page), class: 'btn btn-xs btn-info' %>
				<%= link_to fa_icon('remove'), [:admin, page], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %>
				</td>
				<td>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>

<div class="pagination-container text-center">
	<%= paginate @pages %>
</div>