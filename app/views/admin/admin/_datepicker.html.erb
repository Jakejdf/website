<% usec ||= Time.now.usec; dtp_class ||= nil; classes = ['form-control', 'datetimepicker'] -%>
<% classes << dtp_class unless dtp_class.nil? -%>

<div class="form-group">
	<%= f.label field.to_sym, label -%>
	<div class="input-group date">
		<%= f.text_field field.to_sym, class: classes.join(' '), id: "#{dtp_class}#{usec}", data: {stamp: usec}, value: f.object.send(field) %>
		<span class="input-group-addon">
			<span class="fa fa-fw fa-calendar"></span>
		</span>
	</div>
</div>