<%= form_for [:admin, @port], html: {multipart: true} do |f| %>
<% if @port.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@port.errors.count, "error") %> prohibited this port from being saved:</h2>

	<ul>
		<% @port.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
</div>
<% end %>

<%#= render 'admin/admin/images/pictures_upload', f: f -%>

<div class="form-group">
	<%= f.label :name %>
	<%= f.text_field :name, class: 'form-control' %>
</div>
<div class="form-group">
	<%= f.label :slug %>
	<%= f.text_field :slug, class: 'form-control' %>
</div>
<div class="form-group">
	<%= f.label :content %>
	<%= f.text_area :content, class: 'froala_content' %>
</div>

<div class="form-group">
	<%= f.label :latitude %>
	<%= f.text_field :latitude, class: 'form-control' %>
</div>
<div class="form-group">
	<%= f.label :longitude %>
	<%= f.text_field :longitude, class: 'form-control' %>
</div>

<div class="actions">
	<%= f.submit nil, class: 'btn btn-lg btn-primary' %>
</div>
<% end %>
