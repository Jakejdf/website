<p id="notice"><%= notice %></p>

<h1>Listing Admin Menu Items</h1>

<table>
  <thead>
    <tr>
      <th>Href</th>
      <th>Icon</th>
      <th>Position</th>
      <th>Text</th>
      <th>Page</th>
      <th>Blank target</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_menu_items.each do |admin_menu_item| %>
      <tr>
        <td><%= admin_menu_item.href %></td>
        <td><%= admin_menu_item.icon %></td>
        <td><%= admin_menu_item.position %></td>
        <td><%= admin_menu_item.text %></td>
        <td><%= admin_menu_item.page %></td>
        <td><%= admin_menu_item.blank_target %></td>
        <td><%= link_to 'Show', admin_menu_item %></td>
        <td><%= link_to 'Edit', edit_admin_menu_item_path(admin_menu_item) %></td>
        <td><%= link_to 'Destroy', admin_menu_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

