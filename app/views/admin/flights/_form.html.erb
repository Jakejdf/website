<%= form_for [:admin, @flight] do |f| %>
<% if @flight.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@flight.errors.count, "error") %> prohibited this flight from being saved:</h2>

	<ul>
		<% @flight.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
</div>
<% end %>


<% usec = Time.now.usec -%>
<div class="row">
	<div class="col-sm-7">
		<div class="form-group">
			<%= f.label :departing_airport %>
			<%= f.text_field :departing_airport, class: 'form-control' %>
		</div>
	</div>
	<div class="col-sm-5">
		<%= render 'admin/admin/datepicker', f: f, field: :start_string, label: 'Departing Time', dtp_class: 'start', usec: usec -%>
	</div>
</div>

<div class="row">
	<div class="col-sm-7">
		<div class="form-group">
			<%= f.label :casino_code, "Destination (Casino Code)" %>
			<%= f.text_field :casino_code, class: 'form-control' %>
		</div>
	</div>
	<div class="col-sm-5">
		<%= render 'admin/admin/datepicker', f: f, field: :end_string, label: 'Arriving Time', dtp_class: 'end', usec: usec -%>
	</div>
</div>

<% if false -%>
<div class="form-group">
	<%= f.label :departing_at %>
	<%= f.datetime_select :departing_at, class: 'form-control' %>
</div>
<div class="form-group">
	<%= f.label :arriving_at %>
	<%= f.datetime_select :arriving_at, class: 'form-control' %>
</div>
<% end -%>

<div class="actions">
	<%= f.submit nil, class: 'btn btn-primary btn-lg' %>
</div>
<% end %>
