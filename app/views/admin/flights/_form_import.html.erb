
<!-- Button trigger modal -->
<button type="button" class="btn btn-success" data-toggle="modal" data-target="#importFlights">
	Import CSV File
</button>

<%= form_tag import_admin_flights_path, multipart: true, class: 'form-group' do %>

<!-- Modal -->
<div class="modal fade" id="importFlights" tabindex="-1" role="dialog" aria-labelledby="importFlightsLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title" id="importFlightsLabel">Import CSV File</h4>
			</div>
			<div class="modal-body">

				<%#= label_tag :file, 'Import a CSV File' %>
				<%= file_field_tag :file, required: true %>
				<p class="help-block">Import a CSV File.</p>
				<div class="checkbox">
					<label>
						<%= check_box_tag :erase -%> <span class="text-danger">Override all flight records with CSV data.</span>
					</label>
				</div>
				
				<%#= link_to "Download CSV", '#csv_path', class: 'btn btn-default' %>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
				<%= submit_tag "Import", class: 'btn btn-primary' %>
			</div>
		</div>
	</div>
</div>
<% end %>