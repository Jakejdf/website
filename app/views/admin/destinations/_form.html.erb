<%= form_for [:admin, @destination], html: {multipart: true} do |f| %>
<% if @destination.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@destination.errors.count, "error") %> prohibited this destination from being saved:</h2>

	<ul>
		<% @destination.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
</div>
<% end %>

<div class="form-group">
	<%= f.label :name %>
	<%= f.text_field :name, class: 'form-control' %>
</div>

<div class="form-group">
	<%= f.label :slug %>
	<%= f.text_field :slug, class: 'form-control' %>
</div>

<div class="form-group">
	<%= f.label :content, 'Destination Content' %>
	<%= f.text_area :content, class: 'froala_content form-control' %>
</div>

<%= render 'admin/admin/nested_accordion', f: f, includes: [:pictures] -%>

<%= f.submit nil, class: 'btn btn-primary btn-lg btn-block' %>


<% end %>
