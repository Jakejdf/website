<%= link_to 'New Destination', new_admin_destination_path, class: 'btn btn-primary' %>
<hr>

<div class="table-responsive">
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Destination</th>
				<th></th>
			</tr>
		</thead>

		<tbody>
			<% @destinations.each do |destination| %>
			<tr>
				<td>
					<%= link_to destination.name, edit_admin_destination_path(destination) -%>
				</td>
				<td class="text-right">
					<%= link_to fa_icon('eye'), destination, class: 'btn btn-info btn-xs' -%>
					<%= link_to fa_icon('remove'), [:admin, destination], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' -%>
				</td>

			</tr>
			<% end %>
		</tbody>
	</table>
</div>

<div class="pagination-container text-center">
	<%= paginate @destinations %>
</div>