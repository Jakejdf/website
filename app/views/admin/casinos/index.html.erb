<% content_for :pre_container do -%>
<%= render 'static_pages/parallax_header', text: 'Casinos', img_url: 'bg-roulette.jpg' -%>
<% end -%>

<table class="table table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Address</th>
			<th>Destination</th>
			<th colspan="2"></th>
		</tr>
	</thead>

	<tbody>
		<% @casinos.each do |casino| %>
		<tr>
			<td><%= link_to casino.name, edit_admin_casino_path(casino) %></td>
			<td><%= casino.address %></td>
			<td><%= casino.destination.try(:name) %></td>
			<td><%= link_to 'Show', casino %></td>
			<td><%= link_to 'Destroy', [:admin, casino], method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<br>

<%= link_to 'New Casino', new_admin_casino_path %>
