<h1>Listing flights</h1>

<table>
  <thead>
    <tr>
      <th>Destination</th>
      <th>Departing location</th>
      <th>Departing at</th>
      <th>Arriving location</th>
      <th>Arriving at</th>
      <th>Flight number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flights.each do |flight| %>
      <tr>
        <td><%= flight.destination_id %></td>
        <td><%= flight.departing_location %></td>
        <td><%= flight.departing_at %></td>
        <td><%= flight.arriving_location %></td>
        <td><%= flight.arriving_at %></td>
        <td><%= flight.flight_number %></td>
        <td><%= link_to 'Show', flight %></td>
        <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
        <td><%= link_to 'Destroy', flight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

