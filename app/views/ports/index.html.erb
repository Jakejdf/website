<h1>Listing Ports</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Slug</th>
      <th>Location</th>
      <th>Content</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ports.each do |port| %>
      <tr>
        <td><%= port.name %></td>
        <td><%= port.slug %></td>
        <td><%= port.location %></td>
        <td><%= port.content %></td>
        <td><%= port.latitude %></td>
        <td><%= port.longitude %></td>
        <td><%#= link_to 'Show', port %></td>
        <td><%#= link_to 'Edit', edit_port_path(port) %></td>
        <td><%#= link_to 'Destroy', port, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

