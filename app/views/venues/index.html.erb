<p id="notice"><%= notice %></p>

<h1>Listing Venues</h1>

<div class="table-responsive">
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Name</th>
				<th>Type</th>
			</tr>
		</thead>

		<tbody>
			<% @venues.each do |venue| %>
			<tr>
				<td><%= link_to venue.name, venue_path(venue) %></td>
				<td><%= venue.type %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>

<% if is_admin? -%>
<hr>
<%= link_to 'New Venue', new_admin_venue_path %>
<% end -%>