<% @page_header = @venue.name -%>

<div class="row">
	
	<aside class="col-sm-4">
		
		<div class="panel panel-default">
			
			<% if @venue.pictures.any? -%>
			<%= link_to image_tag(@venue.pictures.first.gh_url, class: 'img-responsive'), venue_pictures_path(@venue), data: {toggle: :modal, target: '#defaultModal'} -%>
			<% else -%>
			<!-- default venue image -->
			<% end -%>

			<div class="panel-body">
				<p>
					<strong>Address:</strong>
					<%= @venue.address %>
				</p>
			</div>

		</div>

		<%= render 'events/upcoming', events: @venue.events, render_footer: false -%>

	</aside>

	<div class="col-sm-8">
		<%= @venue.rendered_content %>

		<% if @venue.attractions.any? -%>
		<section class="panel panel-default">
			<header class="panel-heading">
				<h4 class="panel-title">Attractions</h4>
			</header>
			<ul class="list-group">
				<% @venue.attractions.each do |attraction| -%>
				<%= render 'attractions/show', attraction: attraction -%>
				<% end -%>
			</ul>
		</section>
		<% end -%>

	</div>

</div>

<% if is_admin? -%>
<hr>
<%= link_to 'Edit', edit_admin_venue_path(@venue) %> |
<%= link_to 'Back', admin_venues_path %>
<% end -%>