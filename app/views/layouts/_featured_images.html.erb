<% sample ||= 4; heading ||= :name -%>

<% items.has_image.sample(sample).each do |item| -%>
<div class="col-sm-3">
	<div class="well well-sm">
		<%= link_to image_tag(item.pictures.first.image_url(:featured), class: 'img-thumbnail'), item -%>
		<div class="caption">
			<h5>
				<%= link_to truncate(item.try(heading)), item, title: item.try(heading) -%>
			</h5>
		</div>
	</div>
</div>
<% end -%>