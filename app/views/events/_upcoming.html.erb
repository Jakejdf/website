<% events ||= @events -%>

<% if events.any? -%>
<div class="panel panel-default">
	<div class="panel-heading">
		<h3 class="panel-title text-center">Upcoming Events</h3>
	</div>

	<div class="list-group">
		<% events.each do |event| -%>
		<%= link_to event, class: 'list-group-item' do -%>
		<div class="list-group-item-text media">
			<%= content_tag :i, nil, class: "fa fa-fw fa-#{event.icon} fa-2x media-object pull-left" -%>
			<div class="media-body">
				<h5 class="media-heading">
					<%= event.title -%><br>
					<small><%= event.date_span -%></small>
				</h5>
				<%= event.excerpt(80) -%>
			</div>
		</div>
		<% end -%>
		<% end -%>
	</div>

	<% if render_footer -%>
	<footer class="panel-footer text-right">
		<div class="row">
			<p class="col-sm-6">
				<%= link_to raw('Browse Events '+fa_icon('calendar')), land_events_path, class: 'btn btn-info btn-xs btn-block' -%>
			</p>
			<p class="col-sm-6">
				<%= link_to raw('Browse Cruises '+fa_icon('ship')), cruises_path, class: 'btn btn-info btn-xs btn-block' -%>
			</p>
		</div>
	</footer>
	<% end -%>

</div>
<% else -%>
<p class="lead text-muted text-center">
	There are no upcoming events.
</p>
<% end -%>