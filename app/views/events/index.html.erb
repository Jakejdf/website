<% content_for :pre_container do -%>
<%= render 'static_pages/parallax_header', text: @type.underscore.humanize.pluralize.titleize, img_url: @background_image -%>
<% end -%>

<div class="row">
	<%= render 'layouts/featured_images', items: @type.constantize, heading: :title -%>
</div>

<div class="table-responsive">
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Title</th>
				<th>Dates</th>
				<th>Venue</th>
			</tr>
		</thead>

		<tbody>
			<% @events.each do |event| %>
			<tr>
				<td><%= link_to event.title, event %></td>
				<td><%= event.date_span %></td>
				<td><%= link_to event.venue.name, venue_path(event.venue) %></td>
			</tr>
			<% end %>
		</tbody>
	</table>

</div>

<%#= link_to 'New Event', new_event_path %>
