<section class="parallax" style="background-image: url('<%= image_url('bg-water.jpg') -%>');">
	<div class="jumbotron">
		<div class="container text-center">
			<h1>Events</h1>
		</div>
	</div>
</section>

<span class="divider"></span>

<div class="container">

	<div class="row">
		<%# Destination.featured.each do |destination| -%>
		<div class="col-sm-6 col-md-3">
			<div class="thumbnail auto-height" style="">
				<a class="destination-thumb" href="<%#= destination_path(destination) -%>" style="display: block; height: 150px; background: url('<%#= destination.pictures.first.image_url -%>') center center; background-size: cover;"></a>
				<div class="caption">
					<h4>
						<%#= destination.name -%>
						<!-- <br><small>Theme Park</small> -->
					</h4>
				</div>
			</div>
		</div>
		<%# end -%>
	</div>

	<div class="table-responsive">
		<table class="table table-striped">
			<thead>
				<tr>
					<th>Title</th>
					<th>Venue</th>
					<th>Host</th>
					<th>Dates</th>
					<th colspan="2"></th>
				</tr>
			</thead>

			<tbody>
				<% @events.each do |event| %>
				<tr>
					<td><%= link_to event.title, event %></td>
					<td><%= link_to event.venue.name, venue_path(event.venue) %></td>
					<td><%= event.host %></td>
					<td><%= event.date_span %></td>
					<td><%= link_to 'Edit', edit_admin_event_path(event) %></td>
					<td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
				</tr>
				<% end %>
			</tbody>
		</table>

	</div>

	<%#= link_to 'New Event', new_event_path %>

</div>