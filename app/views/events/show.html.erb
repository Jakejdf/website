<div class="container">

	<header class="page-header">
		<h1>
			<%= @event.title %><br>
			<%= content_tag :small, @event.venue.name -%>
		</h1>
	</header>

	<div class="row">
		
		<div class="col-sm-4">
			<div class="panel panel-default">
				<header class="panel-heading">
					<h4 class="panel-title">Details</h4>
				</header>
				<div class="panel-body">
					<p>
						<strong>Host:</strong>
						<%= @event.host %>
					</p>

					<p>
						<strong>Start at:</strong>
						<%= @event.start_at %>
					</p>

					<p>
						<strong>End at:</strong>
						<%= @event.end_at %>
					</p>
				</div>
			</div>
		</div>

		<div class="col-sm-8">
			<%= @event.rendered_content %>

			<%= render 'ports' if @event.type == 'Cruise' -%>
		</div>


	</div>

	<%= link_to 'Edit', sti_event_path(@event.type, @event, :edit) %> |
	<%= link_to 'Back', sti_event_path(@event.type) %>

</div>