<% @page_header = @event.title -%>

<div class="row">
	
	<aside class="col-sm-4">
		<% if @event.pictures.any? -%>
		<figure class="thumbnail">
			<%= link_to image_tag(@event.pictures.first.image_url), event_pictures_path(@event), data: {toggle: :modal, target: '#defaultModal'} -%>
		</figure>
		<% else -%>
		<!-- default event image -->
		<% end -%>

		<div class="panel panel-default">
			<header class="panel-heading">
				<h4 class="panel-title">Details</h4>
			</header>
			<div class="panel-body">
				<p>
					<strong>Venue:</strong>
					<%= link_to @event.casino.name, casino_path(@event.casino) %>
				</p>

				<p>
					<strong>Start at:</strong>
					<%= @event.start_at.to_formatted_s(:custom_long_ordinal) %>
				</p>

				<p>
					<strong>End at:</strong>
					<%= @event.end_at.to_formatted_s(:custom_long_ordinal) %>
				</p>
			</div>
		</div>

	</aside>

	<div class="col-sm-8">
		<%= @event.rendered_content %>
	</div>

</div>

<% if is_admin? -%>
<hr>
<%= link_to 'Edit', edit_admin_event_path(@event) %> |
<%= link_to 'Back', events_path %>
<% end -%>
