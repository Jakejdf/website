<div class="container">

	<div class="page-header">
		<h1>
			<%= @destination.name %>
		</h1>
	</div>

	<div class="row">

		<div class="col-sm-12">

			<div class="col-sm-4">
				<%= @destination.rendered_content %>
			</div>
			<div class="col-sm-8">
				<div class="well">
					<%= @destination.attributes -%>
				</div>
				<div class="well">
					<h3>Casinos</h3>
					<% @destination.casinos.each do |casino| -%>
					<%= content_tag :p do -%>
					<%= link_to(casino.name, casino) -%>
					<%= casino.distance.round(2) -%>
					<% end -%>
					<% end -%>
				</div>
			</div>

		</div>

	</div>

	<% if is_admin? -%>
	<hr>
	<%= link_to 'Edit', edit_admin_destination_path(@destination) %> |
	<%= link_to 'Back', admin_destinations_path %>
	<% end -%>

</div>