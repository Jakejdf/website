<div class="container">

	<div class="page-header">
		<h1>
			<%= @destination.name %>
		</h1>
	</div>

	<div class="row">

		<div class="col-sm-12">

			<div class="col-sm-4 lead">
				<%= @destination.rendered_content %>
			</div>
			<div class="col-sm-8">
				<div class="well">
					<%= @destination.attributes -%>
				</div>
			</div>

		</div>

	</div>

	<% if true #admin -%>
	<hr>
	<p>
		<%= link_to 'Edit', edit_admin_destination_path(@destination) %> |
		<%= link_to 'Back', admin_destinations_path %>
	</p>
	<% end -%>

</div>