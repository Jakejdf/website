<section class="parallax" style="background-image: url('http://upload.wikimedia.org/wikipedia/commons/1/17/Abstract_-_Water_(Imagicity_998).jpg');">
	<div class="jumbotron">
		<div class="container text-center">
			<h1>Destinations</h1>
		</div>
	</div>
</section>

<span class="divider"></span>

<div class="container">

	<table class="table table-striped">
		<thead>
			<tr>
				<th>Destination</th>
				<th colspan="3">Actions</th>
			</tr>
		</thead>

		<tbody>
			<% @destinations.each do |destination| %>
			<tr>
				<td><%= destination.name -%></td>
				<td><%= link_to 'Show', destination %></td>
				<td><%= link_to 'Edit', edit_destination_path(destination) %></td>
				<td><%= link_to 'Destroy', destination, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
			<% end %>
		</tbody>
	</table>

	<br>

	<%= link_to 'New Destination', new_destination_path %>
</div>